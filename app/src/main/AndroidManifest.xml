<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.readyachieve">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ReadyAchieve">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ReadyAchieve.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".GoalActivity"
            android:windowSoftInputMode="adjustPan|stateVisible"></activity>

        <activity android:name=".MilestoneActivity"
            android:windowSoftInputMode="adjustPan|stateVisible"></activity>

        <activity android:name=".ui.main.goals.GoalsViewActivity"
            android:windowSoftInputMode="adjustPan|stateVisible"></activity>

        <activity android:name=".ui.main.leaderboard.LeaderboardMoreInfoActivity"></activity>

        <activity android:name=".OnboardingActivity"
            android:windowSoftInputMode="adjustPan|stateVisible">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
    </application>

    <uses-sdk></uses-sdk>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

</manifest>