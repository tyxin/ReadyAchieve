<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/leaderboardRankingTopShapeTV"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_margin="25dp"
        android:background="@drawable/leaderboard_ranking_top_bar"
        android:scaleType="centerInside"
        android:src="@drawable/leaderboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leaderboard_rank_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leaderboardRankingTopShapeTV"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/leaderboard_ranking_card_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>